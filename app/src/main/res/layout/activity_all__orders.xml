<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="60dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    tools:context=".All_Orders">



    <AutoCompleteTextView

        android:id="@+id/sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/searchicon"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="25dp"
        android:background="@drawable/buttondesign"
        android:hint="Shop Name"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allorderlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sn"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/lin7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:weightSum="2">
        <Button
            android:id="@+id/allgstbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:text="With GST"/>
        <Button
            android:id="@+id/allnongstbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="monospace"
            android:text="Without GST"/>

    </LinearLayout>


</RelativeLayout>